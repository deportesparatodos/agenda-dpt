{
  "functions": {
    "api/events.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "node_modules/{puppeteer-extra,puppeteer-extra-plugin-*,@sparticuz/chromium,fs-extra,universalify,graceful-fs,jsonfile,rimraf,glob}/**"
    }
  },
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
      "PUPPETEER_EXECUTABLE_PATH": "/opt/chromium"
    }
  }
}